{
  "manifest_version": 3,
  "name": "scraping",
  "description": "browser extension",
  "version": "0.2.1",
  "action": {
    "default_title": "Browser Extension",
    "default_icon": "images.png"
  },
  "permissions": ["tabs", "storage", "activeTab", "scripting"],
  "icons": {
    "16": "images.png",
    "48": "images.png",
    "128": "images.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.com/s*",
        "*://www.noon.com/uae-en/search*",
        "*://*.ikea.com/*/search*",
        "*://*.ikea.pr/*/search*",
        "*://*.ikea.fr/*/search*",
        "*://*.ikea.de/*/search*",
        "*://*.ikea.ae/*/search*",
        "*://*.ikea.sa/*/search*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images.png", "image-not-found.jpg", "index.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.noon.com/*",
    "https://*.ikea.com/*",
    "https://*.ikea.pr/*",
    "https://*.ikea.fr/*",
    "https://*.ikea.de/*",
    "https://*.ikea.ae/*",
    "https://*.ikea.sa/*",
    "https://api.ipify.org/*",
    "http://localhost:4000/*"
  ]
}
